<button class=`flex ml-auto mr-2`>
  <div class="bg-black dark:bg-white"></div>
  <div class="bg-black dark:bg-white"></div>
  <div class="bg-black dark:bg-white"></div>
</button>

<style>
  button {
    flex-direction: column;
    width: 3rem;
    height: 3rem;
    border: 0;
    background: transparent;
    gap: 0.65rem;
  }

  button > div {
    height: 2px;
    width: 100%;
    border-radius: 5px;
    transition: all 0.5s;
    transform-origin: left;
  }

  button:hover div:first-child {
    transform: rotate(31deg);
  }

  button:hover div:nth-child(2) {
    opacity: 0;
  }

  button:hover div:last-child {
    transform: rotate(-33deg);
  }

  @media ( width > 850px){
    button {
      display: none;
    }
  }
</style>
