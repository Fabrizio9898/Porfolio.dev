---
const personalImageAlt = "Fabrizio Andrade";
import Badge from "@/components/icons/Badge.astro";
---

<div class="max-w-xl relative">
    <h1
      class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white mt-0 mb-0"
    >
      Hola! Soy Fabrizio
    </h1>
    <div id="svgdiv" class="w-60">
      <svg
        id="eQt3ZM0oO2m1"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        viewBox="100 100 200 200"
        shape-rendering="geometricPrecision"
        text-rendering="geometricPrecision"
        project-id="806fc6da99594d7a8dea726d9d8c60f7"
        export-id="86b24db287dd47b5b2c72b05ec6a9fc3"
        style="overflow: visible;"
        preserveAspectRatio="xMidYMid meet"
        ><path
          d="M84.801892,150.887049c16.03474,0,53.391443-5.982154,57.764188-26.162379c1.448374-6.684249-5.581936-42.726667-17.34582-38.82159-19.12919,6.350025-16.770611,42.266518-1.65198,49.55947c11.878066,5.729763,39.728816,12.066256,52.926706,12.066256"
          transform="matrix(.985665 0 0 0.943086-23.964912 7.700539)"
          fill="none"
          stroke="#ffe700"
          stroke-width="4.2"
          stroke-dasharray="3 1"></path><path
          d="M165.69383,143.72247c0,0,10.73788,11.563875,10.73788,11.563875s-17.12775,11.563875-17.12775,11.563875"
          transform="translate(-25.661147-8.87049)"
          fill="none"
          stroke="#ffe700"
          stroke-width="4.5"
          stroke-dasharray="3 1"></path></svg
      >
    </div>
    <div class="textybadge">
      <img
        class="profile-image"
        src="/fotodeperfil.png"
        alt={personalImageAlt}
      />
      <a
        href="https://linkedin.com/in/fabrizio-andrade"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center transition md:justify-center animated-badge"
      >
        <Badge>Disponible para trabajar</Badge>
      </a>
      <p
        class="mt-4 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
      >
        <strong>Fullstack Web Developer</strong> y <strong
          >Estudiante de Ciencias de la Computacion</strong
        > de Buenos Aires, Argentina ðŸ‡¦ðŸ‡·.
      </p>
    </div>
</div>

<style>
  .divprincipal {
    display: flex;
    flex-direction: column;
    border: 2px solid white;
  }



  .textybadge {
    overflow: hidden;
    position: relative;
    padding-top: 60px;
  }

  .profile-image {
    float: right;
    width: 150px;
    height: 150px;
    border-radius: 50%;
    margin-left: 15px;
    margin-top: -60px;
    shape-outside: circle(50%);
    position: relative;
    z-index: 1;
  }

  .animated-badge:hover :global(.badge-content) {
    color: transparent;
  }

  .animated-badge:hover :global(.badge-overlay) {
    transform: translateX(0);
  }

  #svgdiv {
    position: absolute;
    top: 80px;
    left: 320px;
    bottom: 0;
    right: 0;
    width: 150px;
    height: 130px;
    overflow: visible;
    z-index: 2;
  }

  #svgdiv svg {
    width: 100%;
    height: 100%;
    margin-left: 20px;
    transform: rotate(42deg);
  }
  
  
 

  @media (max-width: 640px) {
    #svgdiv {
      transform: rotate(30deg) scale(0.8);
      margin-right: -20px;
    }
    .profile-image {
      width: 100px;
      height: 100px;
      margin-top: -60px;
    }

    .text-container {
      padding-top: 40px;
    }
  }
</style>
