<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    background: #170d18;
    font-family: "Onest Variable", sans-serif;
  }

  body {
    margin: 0;
    display: flex;
    justify-content: center;
  }

  h1 {
    font-size: 2em;
    margin: 0.67em 0;
  }

  a {
    background-color: transparent;
  }
