---
import "@fontsource-variable/onest";
import Header from "../components/Header/Header.astro";

interface Props {
  title: string | undefined;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="initial-scale=1, width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative text-black dark:text-white">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-gray-50
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
      dark:bg-slate-950 dark:bg-none"
    >
      <div class="dark:absolute dark:inset-0 dark:z-[-1]">
        <div class="dark:relative dark:h-full dark:w-full">
          <div class="dark:absolute dark:bottom-0 dark:left-0 dark:right-0 dark:top-0 dark:bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] dark:bg-[size:14px_24px]"></div>
        </div>
      </div>
    </div>
    <Header />
    <slot />
  </body>
</html>



<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", sans-serif;
    scroll-behavior: smooth;

  }

  body {
    color: rgba(17, 17, 17, 0.9);
    margin: 0;
    display: flex;
    justify-content: center;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }

  h1 {
    font-size: 2em;
    margin: 0.67em 0;
  }

  a {
    background-color: transparent;
  }
</style>
